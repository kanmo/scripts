#!/bin/bash

menu()
{
    local IFS=$' \t\n'
    local num n=1 opt item cmd
    echo

    for item
    do
        printf "   %3d. %s\n" "$n" "${item%%:*}"
        n=$(( $n + 1 ))
    done
    echo

    if [ $# -lt 10 ]
    then
        opt=-sn1
    else
        opt=
    fi
    read -p " (1 to $#) ==> " $opt num

    ## Check that user entry is valid
    case $num in
        [qQ0] | "" ) return ;; ## q, Q or 0 or "" exits
        *[!0-9]* | 0*)
            printf "\aInvalid response: %s\n" "$num" >&2
            return 1
            ;;
    esac
    echo

    if [ "$num" -le "$#" ]
    then
        eval "${!num#*:}"
    else
        printf "\aInvalid respnse: %s\n" "$num" >&2
        return 1
    fi

}
